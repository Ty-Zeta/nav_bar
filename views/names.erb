        var number_of_names = document.getElementById("number_of_names");
        // this is the number of boxes that appear

        for (i = 0; i < number_of_people; i++) {
            var input = document.createElement("input");
            // variable input is the boxes themselves

            input.text = "text";
            // .text tells the box what to expect to be written in

            input.name = "name" + i;
            // gives a title to the value and the i is the counter for each ascending box

            list_names.appendChild(input);
            // this puts the div of text boxes on the screen after the number button has been pressed
        }
    }
    </script>

