     <script>
    function generate() {

        var number_of_people = parseInt(document.getElementById("number_of_names").value);
        // this takes the number from the text box and passes to a variable to give to the next step
        // document = webpage
        // getelementbyid =  search for the tag < > number_of_names

        var number_of_names = document.getElementById("number_of_names");
        // this is the number of boxes that appear

        for (var i = 0; i < number_of_people; i++) {
            // i++ is the same as i = i + 1

            var input = document.createElement("input");
            // variable input is the boxes themselves

            input.text = "text";
            // .text tells the box what to expect to be written in

            input.name = "name" + i;
            // gives a title to the value and the i is the counter for each ascending box

            input.required = true;
            // something has to be inside the boxes before submit button works

            input.placeholder = "Enter name"
            // places shadow text inside text boxes that goes away as soon as user types
            
            list_names.appendChild(input);
            // this puts the div of text boxes on the screen after the number button has been pressed
        }
    }
    </script>

