    <script type = "text/javascript">
        function ttt_player_name1_box_generate(player_type_choice){
            if (player_type_choice == 'human_choice1')document.getElementById('player1_name_div').innerHTML = 'Enter Player One Name: <input type = "text" name = "user_given_p1_name" />';
            
            else document.getElementById('player1_name_div').innerHTML = '';
        }
    </script>

    <script type = "text/javascript">
        function ttt_player_name2_box_generate(player_type_choice){
            if (player_type_choice == 'human_choice2')document.getElementById('player2_name_div').innerHTML = 'Enter Player Two Name: <input type = "text" name = "user_given_p2_name" />';
            
            else document.getElementById('player2_name_div').innerHTML = '';
        }
    </script>

</head>

<body>
