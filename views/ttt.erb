    <div id = "ttt">
        <form method = "post" action = "/player_selection">
            <p> Welcome to Tic-Tac-Toe! </p>
            <p> Please select the playstyle for each player </p>

            <div id = "player_selection_div">
                <center>
                    <table>
                        
                        <tr>
                            <td> Player 1 = X </td>
                            <td> Player 2 = O </td>
                        </tr>
                        
                        <tr>
                            <td>
                                <select required name = "player1_selection" id = "player1_selection" onchange = "ttt_player_name1_box_generate(this.options[selectedIndex].value)">
                                    <option value = ""> P1 styles </option>
                                    <option value = "human_choice1"> Human </option>
                                    <option value = "sequential_choice1"> Sequential </option>
                                    <option value = "random_choice1"> Random </option>
                                    <option value = "impossible_choice1"> Impossible </option>
                                </select>
                            </td>

                            <td>
                                <select required name = "player2_selection" id = "player2_selection" onchange = "ttt_player_name2_box_generate(this.options[selectedIndex].value)">
                                    <option value = ""> P2 styles </option>
                                    <option value = "human_choice2"> Human </option>
                                    <option value = "sequential_choice2"> Sequential </option>
                                    <option value = "random_choice2"> Random </option>
                                    <option value = "impossible_choice2"> Impossible </option>
                                </select>
                            </td>
                        </tr>
                    </table>
                    <div id = "player1_name_div"> </div>
                    <div id = "player2_name_div"> </div>
                </center>
            </div>

            <p> <input type = "submit" value = "Ready Player One?"> </p>
        </form>
